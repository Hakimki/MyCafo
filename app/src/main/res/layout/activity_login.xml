<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/background">

    <ImageView
        android:layout_width="155dp"
        android:layout_height="148dp"
        android:src="@drawable/eclipse"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/L_img1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/L_img2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L_img1"
        android:text="Welcome Back!"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/L_text1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L_text1"
        android:src="@drawable/login1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/L_img3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ly_3"
        android:layout_below="@id/L_img3"
        android:padding="30dp">

        <EditText
            android:id="@+id/L_edt_email"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/font2"
            android:hint="Enter Your email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Confirm Password"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:paddingLeft="20dp"
            android:fontFamily="@font/font2"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:id="@+id/L_edt_password"
            android:inputType="textPassword"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Forget Password?"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/secondaryColor"
            android:fontFamily="@font/font1"
            android:id="@+id/tv_to_forgotPass"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_3"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/font1"
        android:id="@+id/L_btn1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/L_btn1"
            android:gravity="center"
            android:id="@+id/ly_4"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not have an account?"
                android:fontFamily="@font/font2"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Register"
                android:fontFamily="@font/font1"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp"
                android:id="@+id/L_tv_to_register"/>

        </LinearLayout>


</RelativeLayout>